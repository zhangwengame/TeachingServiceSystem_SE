<!doctype html>
<html>
<head>
  <% include ../head.html %>
</head>
<body>
<!-- 上方选择条 navbar-top-->
<% include ../navbar.html %>
<!-- 侧边框 -->
<%if(type==0) {%>
<% include slide.html%>
<% }%>
<%if(type==1) {%>
<% include slide_teacher.html%>
<% }%>
<%if(type==2) {%>
<% include slide_manager.html%>
<% }%>
<script type="text/javascript">
   function setActive(){
    var active=document.getElementById('course_search');
    active.className='active';
  }
  setActive();
</script>
<!-- 主要内容 -->
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title"><i class="icon-search"></i>选课搜索系统</h3>
          <h5>选择你要的课程</h5>
        </div>
      </div>
    </div>
  </div>
  <!-- 筛选条件 -->
  <div class="span10">
    <div class="box">
      <div class="box-header">
        <div class="title">筛选条件</div>
      </div>
      <form name="input" action="/select/course_search" method="post">
        <div class="box-content padded">
          <div class="row-fluid">
            <div class="span9">
            <!-- 条件选框 -->
              <ul>
                <li class="input">
                  <label>课程号</label>
                  <input type="text" placeholder="课程号" name="course_number">
                </li>
                <li class="input" style="margin-bottom:10px">
                  <label>课程名称:</label>
                  <textarea class="tags" placeholder="This is a textarea" id="tags1428302378316" style="display: none;" name="course_name"></textarea>
                </li>
                <li>
                  <label>课程时间（全不选则为均可）:</label>
                  <table id="user" class="table table-normal">
                    <thead>
                      <tr>
                        <td>&nbsp;</td>
                        <td>周一</td>
                        <td>周二</td>
                        <td>周三</td>
                        <td>周四</td>
                        <td>周五</td>
                        <td>周六</td>
                        <td>周日</td>
                      </tr>
                    </thead>
                       <tr>
                        <td>1、2节</td>
                        <td><input type="checkbox" class="icheck" id="icheck1" name="time" value="11"></td>
                        <td><input type="checkbox" class="icheck" id="icheck2" name="time" value="21"></td>
                        <td><input type="checkbox" class="icheck" id="icheck3" name="time" value="31"></td>
                        <td><input type="checkbox" class="icheck" id="icheck4" name="time" value="41"></td>
                        <td><input type="checkbox" class="icheck" id="icheck5" name="time" value="51"></td>
                        <td><input type="checkbox" class="icheck" id="icheck6" name="time" value="61"></td>
                        <td><input type="checkbox" class="icheck" id="icheck7" name="time" value="71"></td>
                      </tr>
                      <tr>
                        <td>3、4、5节</td>
                        <td><input type="checkbox" class="icheck" id="icheck12" name="time" value="12"></td>
                        <td><input type="checkbox" class="icheck" id="icheck22" name="time" value="22"></td>
                        <td><input type="checkbox" class="icheck" id="icheck32" name="time" value="32"></td>
                        <td><input type="checkbox" class="icheck" id="icheck42" name="time" value="42"></td>
                        <td><input type="checkbox" class="icheck" id="icheck52" name="time" value="52"></td>
                        <td><input type="checkbox" class="icheck" id="icheck62" name="time" value="62"></td>
                        <td><input type="checkbox" class="icheck" id="icheck72" name="time" value="72"></td>
                      </tr>
                      <tr>
                        <td>6、7、8节</td>
                        <td><input type="checkbox" class="icheck" id="icheck13" name="time" value="13"></td>
                        <td><input type="checkbox" class="icheck" id="icheck23" name="time" value="23"></td>
                        <td><input type="checkbox" class="icheck" id="icheck33" name="time" value="33"></td>
                        <td><input type="checkbox" class="icheck" id="icheck43" name="time" value="43"></td>
                        <td><input type="checkbox" class="icheck" id="icheck53" name="time" value="53"></td>
                        <td><input type="checkbox" class="icheck" id="icheck63" name="time" value="63"></td>
                        <td><input type="checkbox" class="icheck" id="icheck73" name="time" value="73"></td>
                      </tr>
                      <tr>
                        <td>9、10节</td>
                        <td><input type="checkbox" class="icheck" id="icheck14" name="time" value="14"></td>
                        <td><input type="checkbox" class="icheck" id="icheck24" name="time" value="24"></td>
                        <td><input type="checkbox" class="icheck" id="icheck34" name="time" value="34"></td>
                        <td><input type="checkbox" class="icheck" id="icheck44" name="time" value="44"></td>
                        <td><input type="checkbox" class="icheck" id="icheck54" name="time" value="54"></td>
                        <td><input type="checkbox" class="icheck" id="icheck64" name="time" value="64"></td>
                        <td><input type="checkbox" class="icheck" id="icheck74" name="time" value="74"></td>
                      </tr>
                       <tr>
                        <td>晚上</td>
                        <td><input type="checkbox" class="icheck" id="icheck15" name="time" value="15"></td>
                        <td><input type="checkbox" class="icheck" id="icheck25" name="time" value="25"></td>
                        <td><input type="checkbox" class="icheck" id="icheck35" name="time" value="35"></td>
                        <td><input type="checkbox" class="icheck" id="icheck45" name="time" value="45"></td>
                        <td><input type="checkbox" class="icheck" id="icheck55" name="time" value="55"></td>
                        <td><input type="checkbox" class="icheck" id="icheck65" name="time" value="65"></td>
                        <td><input type="checkbox" class="icheck" id="icheck75" name="time" value="75"></td>
                      </tr>
                    <tbody>
                    </tbody>                  
                  </table>
                </li>
                <li class="input" style="margin-bottom:10px">
                  <label>教师姓名:</label>
                  <textarea class="tags" placeholder="This is a textarea" id="tags1428302378316" style="display: none;" name="course_teacher"></textarea>
                </li>
              </ul>
               <!--  课程名称AND/OR -->
              <div class="col-lg-6" style="position:absolute;top:230px;left:80%">
                <div>
                  <div class="iradio_flat-aero" style="position: relative;">
                    <input type="radio" name="name" class="icheck" checked="" id="iradio1" style="position: absolute; opacity: 0;" value="and">
                  </div>
                  <label for="iradio1" class="">AND</label>
                </div>

                <div>
                  <div class="iradio_flat-aero" style="position: relative;">
                    <input type="radio" name="name" class="icheck" id="iradio2" style="position: absolute; opacity: 0;"value="or">
                  </div>
                  <label for="iradio2" class="">OR</label>
                </div>
              </div>
              <!-- 上课时间AND/OR -->
              <div style="position:absolute;top:310px;left:80%">
                <div class="col-lg-6">
                  <div>
                    <div class="iradio_flat-aero" style="position: relative;">
                      <input type="radio" name="time_check" class="icheck" checked="" id="iradio3" style="position: absolute; opacity: 0;" value="and">
                    </div>
                    <label for="iradio3" class="">AND</label>
                  </div>
                  <div>
                    <div class="iradio_flat-aero" style="position: relative;">
                      <input type="radio" name="time_check" class="icheck" id="iradio4" style="position: absolute; opacity: 0;" value="or">
                    </div>
                    <label for="iradio4" class="">OR</label>
                  </div>
                </div>
              </div>
              <!-- 教师姓名AND/OR -->
              <div style="position:absolute;top:570px;left:80%">
                <div class="col-lg-6">
                  <div>
                    <div class="iradio_flat-aero" style="position: relative;">
                      <input type="radio" name="teacher" class="icheck" checked="" id="iradio5" style="position: absolute; opacity: 0;" value="and">
                    </div>
                    <label for="iradio5" class="">AND</label>
                  </div>
                  <div>
                    <div class="iradio_flat-aero" style="position: relative;">
                      <input type="radio" name="teacher" class="icheck" id="iradio6" style="position: absolute; opacity: 0;" value="or">
                    </div>
                    <label for="iradio6" class="">OR</label>
                  </div>
                </div>
              </div>
            </div>
          </div>
        <button type="submit" class="btn btn-blue">搜索</button>
        </div>
      </form>
      </div>
  </div>
  <!-- 搜索结果 -->
  <div class="span10">
    <div class="box">
      <div class="box-header">
        <span class="title">搜索结果</span>
        <ul class="box-toolbar">
          <li><span class="label label-blue"><%= course_data.length %></span></li>
        </ul>
      </div>
      <div class="box-content scrollable" style="height: 552px; overflow-y: auto">
      	<% for(var i=0; i<course_data.length;i++) { %>
        <!-- 单条搜索结果 -->
        <div class="box-section news with-icons">
          <!-- icon-OK表示这门课已经修读过 icon-lightbulb表示这门课未修读过-->
          <% if(course_data[i].complete) {%>
          <div class="avatar blue"><i class="icon-ok icon-2x"></i></div>
          <% } %>
          <% if(!course_data[i].complete) {%>
          <div class="avatar blue"><i class="icon-lightbulb icon-2x"></i></div>
          <% } %>
          <!-- 开课时间 -->
          <div class="news-time" style="width:120px"><span><%= course_data[i].semaster%></span><%= course_data[i].time%></div>
          <div class="news-content">
            <!-- 课程名称 -->
            <div class="news-title"><a href="course/<%=course_data[i].id%>" target="view_window"><%= course_data[i].name%></a></div>
            <!-- 课程信息 -->
            <div class="news-text" style="display:inline">
              课程号:<span id="courseID"><%= course_data[i].id%></span>
              任课教师:<span id="teacher"><%= course_data[i].teacher%></span>
              校区:<span id="campus"><%= course_data[i].campus%></span>
              上课地点:<span id="classroom"><%= course_data[i].room%></span>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</div>
</body>
</html>
