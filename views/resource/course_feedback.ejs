<!doctype html>
<html>
<head>
  <% include ../head.html %>
  <style>
  .action-nav-button{
    width: 15%;
  }
  </style>
</head>
<body>
<!-- 上方选择条 navbar-top-->
<% include ../navbar.html %>
<!-- 侧边框 -->
<% include slide_course.html%>
<script type="text/javascript">
   function setActive(){
    var active=document.getElementById('resource_share');
    active.className='active';
  }
  setActive();
</script>
<!-- 主要内容 -->
<div class="main-content">
    <%include current_title.html %>

    <%include resource_bar.html%>

    <%var root = false %>


<div class="span10">
    <div class="box">
      <div class="box-header">
        <span class="title">课程反馈</span>
      </div>
    <div class="box-content" >
        <%if (root == false) {%>
            <form class="validatable" action="/api" method="post">

              <div class="padded">

                <div class="form-group">
                  <label class="control-label col-lg-2">Email:</label>
                  <div class="col-lg-10">
                    <input type="text" class="validate[required]" data-prompt-position="right"/>
                  </div>
                </div>

                <div class="form-group">
                  <label class="control-label col-lg-2">Message:</label>
                  <div class="col-lg-10">
                    <textarea placeholder="输入您的反馈" rows="6"></textarea>
                  </div>
                </div>
              </div>

              <div class="form-actions">
                <button type="submit" class="btn btn-blue">提交</button>
              </div>
            </form>
        <%}else{%>
                <ul class="chat-box timeline" style="max-width:90%">

                    <li class="arrow-box-left gray">
                        <div class="avatar"><img class="avatar-small" src="../../images/avatars/avatar2.jpg" /></div>
                        <div class="info">
              <span class="name">
                <span class="label label-green">COMMENT</span> <strong class="indent">stu1</strong> 发表了新的反馈消息：<strong>老师，作业能少点么！</strong>
              </span>
                            <span class="time"><i class="icon-time"></i> 6 minutes ago</span>
                        </div>
                    </li>

                    <li class="arrow-box-left gray">
                        <div class="avatar"><img class="avatar-small" src="../../images/avatars/avatar2.jpg" /></div>
                        <div class="info">
              <span class="name">
                <span class="label label-green">COMMENT</span> <strong class="indent">stu2</strong> 发表了新的反馈消息：<strong>老师，上课能不来么！</strong>
              </span>
                            <span class="time"><i class="icon-time"></i> 6 minutes ago</span>
                        </div>
                    </li>
                </ul>
        <%}%>
    </div>
</div>



</div>
</body>
</html>