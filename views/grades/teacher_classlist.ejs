<!doctype html>
<% include ../head.html %>
</head>
<body>
<!-- 上方选择条 navbar-top-->
<% include ../navbar.html %>
<!-- 侧边框 -->
<% include teacher_slide.html%>
<script type="text/javascript">
   function setNavActive(){
       var active=document.getElementById('grades');
           active.className='active';
    }

   function setSlideActive(){
        var slide = document.getElementById('classLists');
            slide.className='active';
   }

     setNavActive();
     setSlideActive();
</script>




<!-- 主要内容 -->
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title"><i class="icon-search"></i>课程列表</h3>
        </div>
      </div>
    </div>
  </div>

<div class="span10">
  


<div class="box">
  <div class="box-header">
    <span class="title">进行中课程</span>
    <ul class="box-toolbar">
      <li><span class="label label-green">进行中</span></li>
    </ul>
  </div>
  <div class="box-content">
    <table class="table table-normal">
      <thead>
      <tr>
        <td>课程编号</td>
        <td>课程名称</td>
        <td>上课时间</td>
        <td>学期</td>
        <td>上课地点</td>
        <td>教学班管理</td>
      </tr>
      </thead>

      <tbody>
    <% for(i=0;i<cliston.length;i++) { %> 
      <% if(cliston[i].status=="on"){ %>
      <form name="input" action="classManagement" method="post">
      <tr class="status-pending">
        <td><%=cliston[i].courseid2 %></td>
        <td><%=cliston[i].coursename %></td>
        <td><%=cliston[i].coursetime %></td>
        <td><%=cliston[i].courseterm %></td>
        <td><%=cliston[i].room %></td>
        <input type="hidden" name="courseid"  value=<%=cliston[i]._id %> readonly>
        <td>
          <div class="btn-group">
            <button class="btn btn-xs btn-default dropdown-toggle" type="submit" ><i class="icon-cog"></i></button>
          </div>
        </td>
      </tr>
         </form>
        <% }}%>
      </tbody>

    </table>
  </div>
</div>


  


<div class="box">
  <div class="box-header">
    <span class="title">已完结课程</span>
    <ul class="box-toolbar">
      <li><span class="label label-red">已完结</span></li>
    </ul>
  </div>
  <div class="box-content">
    <table class="table table-normal">
      <thead>
      <tr>
        <td>课程编号</td>
        <td>课程名称</td>
        <td>上课时间</td>
        <td>学期</td>
        <td>上课地点</td>
        <td>教学班管理</td>
      </tr>
      </thead>
      <tbody>
       <% for(i=0;i<clistoff.length;i++) { %> 
       <%  if(clistoff[i].status=="off") { %>
      <form name="input" action="classManagement" method="post">
      <tr class="status-pending">
        <td><%=clistoff[i].courseid2 %></td>
        <td><%=clistoff[i].coursename %></td>
        <td><%=clistoff[i].coursetime %></td>
        <td><%=clistoff[i].courseterm %></td>
        <td><%=clistoff[i].room %></td>

        <input type="hidden" name="courseid"  value=<%=clistoff[i]._id %> readonly >
        <td>
          <div class="btn-group">
            <button class="btn btn-xs btn-default dropdown-toggle" type="submit" ><i class="icon-cog"></i></button>
          </div>
        </td>
      </tr>
       </form>
       <%}%>
       <%}%>

      </tbody>
    </table>
  </div>
</div>


</div>



</div>
</body>
</html>
