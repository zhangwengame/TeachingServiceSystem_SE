<!doctype html>
<html>
<head>
<% include ../head.html %>
</head>
<body>
<!-- 上方选择条 navbar-top-->
<% include ../navbar.html %>
<!-- 侧边框 -->
<%if(type==0) {%>
<% include slidebar_student.html%>
<% }%>
<%if(type==1) {%>
<% include slidebar_teacher.html%>
<% }%>
<%if(type==2) {%>
<% include arrange_slidebar.html%>
<% }%>
<script type="text/javascript">
   function setNavActive(){
       var active=document.getElementById('arrange');
           active.className='active';
    }

   function setSlideActive(){
        var slide = document.getElementById('classroomdelete');
            slide.className='active';
   }

     setNavActive();
     setSlideActive();
</script>

<!-- 主要内容 -->
<div class="main-content">
  <div class="container-fluid">
    <div class="row-fluid">
      <div class="area-top clearfix">
        <div class="pull-left header">
          <h3 class="title"><i class="icon-search"></i>删除教室</h3>
          <h5>输入教室ID</h5>
        </div>
      </div>
    </div>
  </div>
  <!-- 信息填写 -->
  <div class="span12">
    <div class="box">
      <div class="box-header">
        <span class="title">教室名称</span>
      </div>
      <form name="input" action="/arrange/classroomdelete" method="post">
        <div class="box-content padded">
          <div class="row-fluid">
            <div class="span9">
            <!-- 条件选框 -->
              <ul>
                <li class="input">
                  <label>教室ID</label>
                  <input type="text" name="classid2">
                </li>
                
                <li class="input">
                  <label>校区</label>
                  <select name="campus">
                    <option value="紫金港校区" selected="selected">紫金港校区</option>
                    <option value="玉泉校区">玉泉校区</option>
                    <option value="西溪校区">西溪校区</option>
                    <option value="华家池校区">华家池校区</option>
                    <option value="之江校区">之江校区</option>
                  </select>
                </li>
              </ul>
              </div>
            </div>
            <button type="submit" class="btn btn-blue">删除</button>
          </div>
        </div>
      </form>
      </div>

      <!-- 删除结果 -->
      <div class="span10">
        <div class="box">
          <div class="box-header">
            <span class="title">删除结果</span>
          </div>
          <form action="/coursedelete" role="form" method="post">
            <p><span><%= deleteresult %></span></p>
          </form>
        </div>
      </div>
    </div>
</div>

</body>
</html>
