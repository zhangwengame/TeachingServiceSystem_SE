<!DOCTYPE html>
<html>
  <head>
    <% include ../head.html %>
  </head>
  <body>
  <!-- 上方选择条 navbar-top-->
  <% include ../navbar.html %>
  <!-- 侧边框 -->
  <% include slide_teacher.html%>

    <div class="main-content">
      <div class="container-fluid">
        <div class="row-fluid">
          <div class="area-top clearfix">
            <div class="pull-left header">
              <h3 class="title"><i class="icon-key"></i>选择课程</h3>
              <h5>选择接下来要进行操作的课程</h5>
            </div>
          </div>
        </div>
      </div>
      <div class="span12">
        <div class="box">
          <div class="box-header">
            <div class="title">
              请选择接下来要进行操作的课程
            </div>
          </div>
          <div class="box-content padded">
            <ul>
              <% for(var i = 0; i < courses.length; i++){ %>
              <li>
              <pre><%= courses[i].coursename %>&#9;<a class="btn btn-default", href="/OnlineTest/teacher/chooseCourse=<%= courses[i]._id %>">选定</a></pre>
              </li>
              <% } %>
            </ul>
          </div>
        </div>

        <div class="box">
          <div class="box-header">
            <div class="title">
              现在选定
            </div>
          </div>
          <div class="box-content padded">
          <%= chosenCourse %>
          </div>
        </div>
      </div>
    </div>

  </body>
</html>